<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="hm_contract.contract_category_root">
        <field name="name">Contract</field>
        <field name="sequence">2</field>
    </record>

    <record id="group_contract_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="hm_contract.contract_category_root"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_contract_officer" model="res.groups">
        <field name="name">Officer</field>
        <field name="category_id" ref="hm_contract.contract_category_root"/>
        <field name="implied_ids" eval="[(4, ref('hm_contract.group_contract_user'))]"/>
    </record>

    <record id="group_contract_admin" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="hm_contract.contract_category_root"/>
        <field name="implied_ids" eval="[(4, ref('hm_contract.group_contract_officer'))]"/>
    </record>


</odoo>
