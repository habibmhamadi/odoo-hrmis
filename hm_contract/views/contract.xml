<odoo>
  <data>

    <!-- FORM -->
    <record id="contract_contract_view_form" model="ir.ui.view">
      <field name="name">contract.contract.view.form</field>
      <field name="model">contract.contract</field>
      <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_draft" string="Reset to Draft" type="object" />
                <button name="action_hr_approval" string="Move to HR Approval" type="object" class="btn-primary" states="draft"/>
                <button name="action_director_approval" string="Move to Director Approval" type="object" states="hr_approval" class="btn-primary"/>
                <button name="action_running" string="Approve" type="object" states="director_approval" class="btn-primary"/>
                <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
            </header>
          <sheet>
            <div class="oe_title">
                <h1 class="d-flex">
                    <field name="name" placeholder="Contract"/>
                </h1>
            </div>
            <group>
                <group string="Employee Information">
                    <field name="employee_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                    <field name="father_name" />
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="previous_contract_id" attrs="{'invisible': [('previous_contract_id', '=', False)]}" />
                </group>
                <group string="Contract Details">
                    <field name="renewal_type" />
                    <field name="resource_calendar_id" />
                    <field name="start_date" />
                    <field name="end_date" />
                </group>
                <group string="Contract Approvers">
                  <field name="hr_approver_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                  <field name="director_approver_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                </group>
                <group string="Salary Information">
                  <field name="currency_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                  <field name="wage" />
                </group>
            </group>
          </sheet>
          <div class="oe_chatter">
              <field name="message_follower_ids" groups="base.group_user" options="{'post_refresh': 'recipients'}"/>
              <field name="activity_ids"/>
              <field name="message_ids"/>
          </div>
        </form>
      </field>
    </record>

    <!-- TREE -->
    <record id="contract_contract_view_tree" model="ir.ui.view">
      <field name="name">contract.contract.view.tree</field>
      <field name="model">contract.contract</field>
      <field name="arch" type="xml">
        <tree edit="false">
            <field name="name"/>
            <field name="employee_id" />
            <field name="father_name"/>
            <field name="department_id"/>
            <field name="job_id"/>
            <field name="state"/>
        </tree>
      </field>
    </record>

    <!-- KANBAN -->
    <record id="contract_contract_view_kanban" model="ir.ui.view">
        <field name="name">contract.contract.view.kanban</field>
        <field name="model">contract.contract</field>
        <field name="arch" type="xml">
            <kanban quick_create="false" records_draggable="false">
              <field name="name" />
              <field name="job_id" />
              <field name="employee_id" />
              <field name="currency_id" />
              <field name="wage" />
              <field name="id" />
              <field name="image" />
              <templates>
                  <t t-name="kanban-box">
                      <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                          <div class="oe_kanban_details">
                              <div class="o_kanban_record_top">
                                  <div class="o_kanban_record_headings">
                                      <div class="o_hr_contract_state">
                                          <strong class="o_kanban_record_title">
                                              <field name="name"/>
                                          </strong>
                                      </div>
                                      <div class="o_employee_name mt-1">
                                          <strong class="o_kanban_record_title">
                                              <field name="employee_id"/>
                                          </strong>
                                      </div>
                                      <span t-if="record.job_id.raw_value" class="o_kanban_record_subtitle"><field name="job_id"/></span>
                                  </div>
                              </div>
                              <div >
                                  <div style="float:left;">
                                     <field name="wage"/>
                                  </div>
                                  <div style="float:right;">
                                    <img 
                                        t-att-src="kanban_image('contract.contract', 'image', record.id.raw_value)"
                                        alt="Image"  style="width:20px;  height:20px; border-radius: 10px;"/>
                                  </div>
                            </div>
                          </div>
                      </div>
                  </t>
              </templates>
            </kanban>
        </field>
    </record>

    <!-- SEARCH -->
    <record id="contract_contract_view_search" model="ir.ui.view">
        <field name="name">contract.contract.view.search</field>
        <field name="model">contract.contract</field>
        <field name="arch" type="xml">
          <search>
              <field name="name" filter_domain="['|', ('name', 'ilike', self), ('employee_id', 'ilike', self)]"/>
              <field name="job_id" />
              <field name="department_id" />
              <separator/>
              <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
              <separator/>
              <filter string="Running" name="running" domain="[('state', '=', 'running')]"/>
              <separator/>
              <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
              <group expand="0" string="Group By">
                  <filter name="group_state" string="State" domain="[]" context="{'group_by': 'state'}"/>
                  <filter name="group_department" string="Department" domain="[]" context="{'group_by': 'department_id'}"/>
                  <filter name="currency_id" string="Currency" domain="[]" context="{'group_by': 'currency_id'}"/>
              </group>
              <searchpanel>
                  <field name="company_id" icon="fa-building" enable_counters="1"/>
                  <field name="department_id" icon="fa-users" enable_counters="1"/>
              </searchpanel>
          </search>
        </field>
    </record>


    <!-- ACTION -->
    <record id="contract_contract_action" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">contract.contract</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_group_state': 1 }</field>
        <field name="search_view_id" ref="contract_contract_view_search"/>
    </record>

    <menuitem
        id="contract_menu_root"
        name="Contracts"
        action="contract_contract_action"
        groups="group_contract_user"
        sequence="1"/>

    <menuitem
        id="contract_menu"
        name="Contracts"
        action="contract_contract_action"
        parent="contract_menu_root"
        groups="group_contract_user"
        sequence="1"/>
  </data>
</odoo>