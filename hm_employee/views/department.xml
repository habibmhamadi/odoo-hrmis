<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM -->
    <record id="department_department_view_form" model="ir.ui.view">
        <field name="name">department.department.view.form</field>
        <field name="model">department.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />       
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE -->
    <record id="department_department_view_tree" model="ir.ui.view">
        <field name="name">department.department.view.tree</field>
        <field name="model">department.department</field>
        <field name="arch" type="xml">
            <tree edit="false">
                <field name="name" />
            </tree>
        </field>
    </record>
    
    <!-- ACTION -->
    <record id="department_department_action" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">department.department</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    

    <menuitem
        id="department_menu"
        name="Departments"
        action="department_department_action"
        parent="employee_menu_root"
        groups="group_hr_user"
        sequence="2"/>

</odoo>
