<odoo>
  <data>

    <!-- FORM -->
    <record id="employee_employee_view_form" model="ir.ui.view">
      <field name="name">employee.employee.view.form</field>
      <field name="model">employee.employee</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_button_box" name="button_box">
                <button name="action_open_employee_document"
                    class="oe_stat_button"
                    icon="fa-file"
                    type="object"
                    string="Documents"/>
            </div>
            <field name="image" widget="image" class="oe_avatar" />
            <div class="oe_title">
                <h1 class="d-flex">
                    <field name="name" placeholder="Employee's Name"/>
                </h1>
            </div>
            <group>
                <group>
                    <field name="parent_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                    <field name="department_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                </group>
                <group>
                    <field name="work_phone" widget="phone"/>
                    <field name="work_email" widget="email" />
                </group>
            </group>
            <notebook>
              <page name="work_info" string="Work Information">
                  <group>
                      <group string="Employement Information">
                          <field name="company_id" readonly="1"/>
                          <field name="job_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                          <field name="resource_calendar_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                      </group>
                  </group>
              </page>
              <page name="private_info" string="Private Information">
                  <group>
                      <group string="Citizenship">
                          <field name="nationality_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                          <field name="nid_no" />
                          <field name="passport_no" />
                          <field name="tin_no" />
                      </group>
                      <group string="Personal Information">
                          <field name="father_name" />
                          <field name="dob" />
                          <field name="age" />
                          <field name="place_of_birth" />
                          <field name="gender" />
                          <field name="marital_status" />
                          <field name="no_of_children" />
                          <field name="blood_group" />
                      </group>
                      <group string="Contact Information">
                          <field name="private_phone" />
                          <field name="private_email" />
                          <field name="current_address" />
                      </group>
                  </group>
                  <notebook>
                      <page string="Emergency Contacts">
                          <field name="emergency_contact_ids" nolabel="1">
                              <tree>
                                  <field name="name" />
                                  <field name="relationship" />
                                  <field name="phone_no" />
                              </tree>
                          </field>
                      </page>
                      <page string="References">
                          <field name="reference_ids" nolabel="1">
                              <tree>
                                  <field name="name" />
                                  <field name="job_title" />
                                  <field name="organization" />
                                  <field name="phone_no" />
                              </tree>
                          </field>
                      </page>
                  </notebook>
              </page>
              <page name="hr_setting" string="HR Setting">
                  <group>
                     <group string="Status">
                        <field name="user_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                        <field name="badge_no" />
                     </group>
                  </group>
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
              <field name="message_follower_ids" groups="base.group_user" options="{'post_refresh': 'recipients'}"/>
              <field name="activity_ids"/>
              <field name="message_ids"/>
          </div>
        </form>
      </field>
    </record>

    <!-- TREE -->
    <record id="employee_employee_view_tree" model="ir.ui.view">
      <field name="name">employee.employee.view.tree</field>
      <field name="model">employee.employee</field>
      <field name="arch" type="xml">
        <tree edit="false">
            <field name="name"/>
            <field name="job_id" />
            <field name="parent_id"/>
            <field name="department_id"/>
            <field name="work_phone"/>
            <field name="work_email"/>
        </tree>
      </field>
    </record>

    <!-- KANBAN -->
    <record id="employee_employee_view_kanban" model="ir.ui.view">
        <field name="name">employee.employee.view.kanban</field>
        <field name="model">employee.employee</field>
        <field name="arch" type="xml">
            <kanban quick_create="false">
              <field name="name" />
              <field name="image" />
              <field name="job_id" />
              <field name="work_email" />
              <field name="work_phone" />
              <templates>
                  <t t-name="kanban-box">
                      <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                          <field name="image" class="o_kanban_image_fill_left d-block" widget="image" options="{'zoom': true, 'zoom_delay': 1000}"/>
                          <div class="oe_kanban_details">
                              <div class="o_kanban_record_top">
                                  <div class="o_kanban_record_headings">
                                      <strong class="o_kanban_record_title">
                                          <field name="name" placeholder="Employee's Name"/>
                                      </strong>
                                      <span t-if="record.job_id.raw_value" class="o_kanban_record_subtitle"><field name="job_id"/></span>
                                  </div>
                              </div>
                              <ul>
                                  <li t-if="record.work_email.raw_value" class="o_text_overflow"><field name="work_email" /></li>
                                  <li t-if="record.work_phone.raw_value" class="o_force_ltr"><field name="work_phone" /></li>
                              </ul>
                          </div>
                      </div>
                  </t>
              </templates>
            </kanban>
        </field>
    </record>

    <!-- SEARCH -->
    <record id="employee_employee_view_search" model="ir.ui.view">
        <field name="name">employee.employee.view.search</field>
        <field name="model">employee.employee</field>
        <field name="arch" type="xml">
          <search>
              <field name="name" filter_domain="['|', ('name', 'ilike', self), ('father_name', 'ilike', self)]"/>
              <field name="job_id" />
              <field name="department_id" />
              <field name="nid_no" />
              <field name="passport_no" />
              <field name="work_phone" />
              <field name="private_phone" />
              <separator/>
              <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
              <group expand="0" string="Group By">
                  <filter name="group_manager" string="Manager" domain="[]" context="{'group_by': 'parent_id'}"/>
                  <filter name="group_department" string="Department" domain="[]" context="{'group_by': 'department_id'}"/>
                  <filter name="group_job" string="Job" domain="[]" context="{'group_by': 'job_id'}"/>
                  <filter name="gender" string="Gender" domain="[]" context="{'group_by': 'gender'}"/>
              </group>
              <searchpanel>
                  <field name="company_id" icon="fa-building" enable_counters="1"/>
                  <field name="department_id" icon="fa-users" enable_counters="1"/>
              </searchpanel>
          </search>
        </field>
    </record>


    <!-- ACTION -->
    <record id="employee_employee_action" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">employee.employee</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="employee_menu_root"
        name="Employees"
        action="employee_employee_action"
        groups="group_hr_user"
        sequence="1"/>

    <menuitem
        id="employee_menu"
        name="Employees"
        action="employee_employee_action"
        parent="employee_menu_root"
        groups="group_hr_user"
        sequence="1"/>
  </data>
</odoo>