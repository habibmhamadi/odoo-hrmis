<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE: -->
    <record id="employee_document_view_tree" model="ir.ui.view">
        <field name="name">employee.document.view.tree</field>
        <field name="model">employee.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="doc_type"/>
                <field name="doc_file" widget="file"/>
                <field name="employee_id"/>
            </tree>    
        </field>
    </record>

    <!-- FORM -->
    <record id="employee_document_view_form" model="ir.ui.view">
        <field name="name">employee.document.view.form</field>
        <field name="model">employee.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />  
                        <field name="doc_type" />  
                        <field name="doc_file" widget="file"/>       
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
