<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM -->
    <record id="job_job_view_form" model="ir.ui.view">
        <field name="name">job.job.view.form</field>
        <field name="model">job.job</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />       
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE -->
    <record id="job_job_view_tree" model="ir.ui.view">
        <field name="name">job.job.view.tree</field>
        <field name="model">job.job</field>
        <field name="arch" type="xml">
            <tree edit="false">
                <field name="name" />
            </tree>
        </field>
    </record>
    
    <!-- ACTION -->
    <record id="job_job_action" model="ir.actions.act_window">
        <field name="name">Jobs</field>
        <field name="res_model">job.job</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    

    <menuitem
        id="job_menu"
        name="Jobs"
        action="job_job_action"
        parent="employee_menu_root"
        groups="group_hr_user"
        sequence="3"/>

</odoo>
